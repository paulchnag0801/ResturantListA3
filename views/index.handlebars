<!-- search bar -->
<div class='container search-bar'>
  <div class='row'>
    <div class='col-12 col-lg-4'>
      <div class='search-bar-outer'>
        <form action='/restaurants/searches' method='GET'>
          <h4 class='mb-2'>尋找餐廳：</h4>
          <div class='input-group'>
            <input type='text' name='keyword' class='form-control' placeholder='輸入餐廳、分類' aria-label='Restaurant Name...'
              value='{{keyword}}' aria-describedby='search-button' />
            <div class='input-group-append'>
              <button class='btn btn-major' type='submit' id='search-button'><i class='fas fa-search'></i></button>
            </div>
          </div>
        </form>
      </div>
    </div>
    <div class='col-12 col-lg-4'></div>
    <form class='col-12 col-lg-4' action='/restaurants/sort' method='GET'>
      <select id='select' name='select' class='form-control' onchange='this.form.submit()'>
        <option value='0' selected disabled>選擇排序</option>
        <option value='name' {{sort select 'name' }}>名稱:A-Z </option>
        <option value='-name' {{sort select '-name' }}>名稱:Z-A</option>
        <option value='category' {{sort select 'category' }}>類別</option>
        <option value='location' {{sort select 'location' }}>地區</option>
        <option value='-rating' {{sort select '-rating' }}>評價:高到低</option>
      </select>
    </form>
  </div>
</div>

<!-- restaurant list -->
<div class='container mt-5'>
  <div class='row'>

    {{{no_result}}}

    <div class='col-md-10 col-12 mx-auto'>
      <div class='card-columns'>
        {{#each restaurants}}
        <a href='/restaurants/{{this._id}}' class='text-secondary'>
          <div class='card mb-3'>
            <img class='card-img-top' src='{{this.image}}' alt='Card image' />
            <div class='card-body p-3'>
              <h6 class='card-title mb-1'>{{this.name}}</h6>

              <div class='restaurant-category mb-1'>
                <i class='fas fa-utensils pr-2'></i>
                {{this.category}}
              </div>

              <span class='badge badge-pill badge-danger font-weight-normal'>
                {{this.rating}}
                <i class='fas fa-star fa-xs'></i>
              </span>
            </div>
            <div class='restaurant-button-group d-flex container justify-content-end align-items-center p-0 mb-3'>
              <a class='btn btn-warning m-1' href='/restaurants/{{this._id}}/edit' role='button'>Edit</a>
              <a class='btn btn-info m-1' href='/restaurants/{{this._id}}' role='button'>Detail</a>
              <form action='./restaurants/{{this._id}}?_method=DELETE' method='POST' style='display: inline;'>
                <button type='submit' style='color: brown;'>delete</button>
              </form>
            </div>
          </div>
        </a>

        {{/each}}

      </div>
    </div>
  </div>
</div>